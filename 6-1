#include <iostream>
using namespace std;

int main()
{
	int num = 0;

	cin >> num;
	while (num != 1)
	{
		if (num % 2 == 0)
		{
			int temp = num;
			num /= 2;
			cout << temp << "/2=" << num << endl;
		}
		else
		{
			int temp = num;
			num = 3 * num + 1;
			cout << temp << "*3+1=" << num << endl;
		}
	}
	return 0;
}
