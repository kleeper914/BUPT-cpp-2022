#include <iostream>
using namespace std;

int main()
{
	int num = 0;

	cin >> num;
	
	for (int j = 0; j < 2 * num; j++)
	{
		cout << "*";
	}
	cout << '\n';
	for (int j = 0; j < num - 2; j++)
	{
		for (int k = 0; k < j + 1; k++)
		{
			cout << " ";
		}
		cout << "*";
		for (int k = 0; k < 2*num - 2; k++)
		{
			cout << " ";
		}
		cout << "*" << endl;
	}
	for (int j = 0; j < num - 1; j++)
	{
		cout << " ";
	}
	for (int j = 0; j < 2 * num; j++)
	{
		cout << "*";
	}
	return 0;
}
